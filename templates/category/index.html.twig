{% extends 'base.html.twig' %}

{% block title %}Categorías{% endblock %}

{% block body %}

    <h1 class='d-flex align-items-center justify-content-between'>
        Categorías  <a href="{{ path('app_category_create') }}" class="btn btn-dark btn-sm">Crear Categoría</a>
    </h1>

    <table class="table table-striped">
        <tbody>
            {% for category in categories %}

                <tr>
                    <td>{{category.name}}</td>
                    <td>
                        <a href="{{ path('app_category_edit',{id: category.id}) }}">Editar</a>
                    </td>
                </tr>

            {% endfor %}
        </tbody>
    </table>

{% endblock %}
